{
  "vertical_scroll_margin": 10.0,
  "ui_font_weight": 500.0,
  "agent_ui_font_size": 16.0,
  "ui_font_family": "Source Sans Pro",
  "gutter": {
    "breakpoints": true
  },
  "toolbar": {
    "breadcrumbs": true
  },
  "status_bar": {
    "active_language_button": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "enabled": false
    }
  },
  "icon_theme": "Material Icon Theme",
  "buffer_font_weight": 500.0,
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-1f5f607f-b5bf-4756-9cb8-b0d7d92a5d8d"
      }
    }
  },
  "theme": "Fleet Dark",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "vim_mode": true,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "profiles": {
      "agent": {
        "name": "Agent",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "dock": "right"
    // "version": "2"
  },
  "ui_font_size": 15.0,
  "buffer_font_size": 14,
  // "buffer_font_family": "SFMono Nerd Font Mono",
  "buffer_font_family": "RobotoMono Nerd Font Mono",
  // "buffer_font_family": "Ubuntu Mono",
  // "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  // "buffer_font_family": "monospace",
  "buffer_line_height": {
    "custom": 1.2999999523162842
  },
  "collaboration_panel": {
    "button": false
  },
  "confirm_quit": true,
  "format_on_save": "off",
  "wrap_guides": [80],
  "tab_size": 2,
  "languages": {
    "Python": {
      "tab_size": 4
    },
    "C": {
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    }
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 15
  },
  "completions": {
    "lsp_fetch_timeout_ms": 5000
  }

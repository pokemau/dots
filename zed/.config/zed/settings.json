  "theme": "Ayu Mirage",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "vim_mode": true,
  "icon_theme": "Material Icon Theme",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "profiles": {
      "agent": {
        "name": "Agent",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "dock": "right"
    // "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  // "buffer_font_family": "SFMono Nerd Font Mono",
  "buffer_font_family": "RobotoMono Nerd Font Mono",
  // "buffer_font_family": "Ubuntu Mono",
  // "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  // "buffer_font_family": "monospace",
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.4
  },
  "collaboration_panel": {
    "button": false
  },
  "confirm_quit": true,
  "format_on_save": "off",
  "wrap_guides": [80],
  "tab_size": 2,
  "languages": {
    "Python": {
      "tab_size": 4
    },
    "C": {
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    }
  },
  "terminal": {
    "font_size": 15
  },
  "completions": {
    "lsp_fetch_timeout_ms": 5000
  }

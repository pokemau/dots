{
  "assistant": {
    "dock": "bottom",
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,

  "buffer_font_family": "Cascadia Code",
  // "buffer_font_family": "MesloLGS Nerd Font Mono",
  // "buffer_font_family": "SFMono Nerd Font Mono",
  // "buffer_font_family": "RobotoMono Nerd Font",
  // "buffer_font_family": "Fira Code",
  // "buffer_font_family": "monospace",
  "buffer_font_weight": 500,
  "buffer_line_height": {
    "custom": 1.3
  },
  "wrap_guides": [80],
  "buffer_font_features": {
    "calt": false
  },
  "terminal": {
    "font_size": 12.5
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Dark",
    "dark": "VSCode Dark Modern"
  }
}

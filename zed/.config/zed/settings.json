      "command": "postgres-mcp",
      "args": [
        "--access-mode=unrestricted"
      ],
      "env": {
        "DATABASE_URI": "postgresql://ayahay-v2:AyahayV2%40123@ayahay-qa.cq711qm8cdfx.ap-southeast-2.rds.amazonaws.com/ayahay-v2-client?sslmode=require"
      }
